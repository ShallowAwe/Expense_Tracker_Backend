# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=8080
API_VERSION=v1

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
# Individual connection parameters (optional, for reference)
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=root
DB_NAME=expense_tracker
DB_PORT=5433

# Prisma Database URL (THIS IS WHAT PRISMA USES)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:root@localhost:5433/expense_tracker?schema=public"

# ============================================
# REDIS CONFIGURATION (Cache & Queue)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# JWT AUTHENTICATION
# ============================================
# IMPORTANT: Change these in production!
JWT_SECRET=be40d6acf980ed8b6a1cab45708b6f66cf021f1a38067e306c4f21902d4d9efd
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ============================================
# SECURITY
# ============================================
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS (Cross-Origin Resource Sharing)
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4200

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ============================================
# BACKGROUND JOBS (Bull Queue)
# ============================================
QUEUE_NAME=expense-tracker-jobs
QUEUE_CONCURRENCY=5

# ============================================
# WEBSOCKET
# ============================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/socket.io

# ============================================
# FILE UPLOADS (Optional - for receipt scanning)
# ============================================
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# ============================================
# NOTIFICATION SETTINGS
# ============================================
ENABLE_BUDGET_ALERTS=true
ALERT_CHECK_INTERVAL_HOURS=24

# ============================================
# OPTIONAL: Email/SMS Notifications (Future)
# ============================================
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=
# SMS_API_KEY=

# ============================================
# OPTIONAL: AI/ML Features (If using external APIs)
# ============================================
# OPENAI_API_KEY=
# HUGGINGFACE_API_KEY=
